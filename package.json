{
  "version": "0.5.0",
  "name": "@hokla/eslint-plugin-bug-shield",
  "author": "Ludovic Descateaux <ludovicd@hokla.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "description": "Kill your bugs for good accross all projects with custom ESLint rules and configurations",
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "requireindex": "^1.2.0"
  },
  "devDependencies": {
    "@hokla/eslint-plugin-bug-shield": "link:./dist",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/parser": "^5.15.0",
    "@typescript-eslint/utils": "^5.15.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.11.0",
    "eslint-doc-generator": "^1.4.3",
    "eslint-plugin-eslint-plugin": "^5.0.7",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "jest": "^27.5.1",
    "pinst": "^3.0.0",
    "prettier": "3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "scripts": {
    "cm": "cz",
    "build": "tsc && cp lib/index.js dist/",
    "lint": "eslint --ext .ts,.tsx .",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "check:eslint-docs": "eslint-doc-generator --check --rule-doc-section-options=false",
    "create:eslint-docs": "eslint-doc-generator --init-rule-docs --rule-doc-section-options=false",
    "update:eslint-docs": "eslint-doc-generator --rule-doc-section-options=false",
    "rule:generate": "yarn ts-node generate/generateNewRule.ts && yarn build && yarn create:eslint-docs"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hokla-org/bug-shield.git"
  },
  "keywords": [
    "eslint",
    "linter",
    "bug detection"
  ],
  "bugs": {
    "url": "https://github.com/hokla-org/bug-shield/issues"
  },
  "homepage": "https://github.com/hokla-org/bug-shield#readme"
}
